// src/pages/works.astro
import { createClient } from 'microcms-js-sdk';
import WorksItem from './P-works__item.astro';

const domain = import.meta.env.PUBLIC_microCMS_DOMAIN;
const apiKey = import.meta.env.PUBLIC_microCMS_API_KEY;

interface Item {
  id: string;
  title: string;
  content: string;
  eyecatch?: {
    url: string;
  };
  tags: Array<{
    name: string;
  }>;
}

// microCMSのクライアントを設定
const client = await createClient({
  serviceDomain: domain,
  apiKey: apiKey,
});

const worksObj =  await client.getList({
        endpoint: 'works',
    })
    // .then((res) => console.log(''))
    // .catch((err) => console.log(''));

const works: Item[]  = worksObj.contents;
// console.log(works)

for (let i = works.length - 1; i >= 0; i--) {
  // console.log(i);
  if(works[i].tags[0].name !== "個人開発"){
    works.splice(i, 1);
  }
}

---

<ul class="works-cards">
    {works && works.map((item, index) => (
        <WorksItem item={item} index={works.length - (index + 1)}/>
    ))}
</ul>


<style lang="scss">
  .works-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, 320px);
    margin-top: 1rem;
    justify-content: center;
    grid-row-gap: 2rem;
    grid-column-gap: 2rem;
  }
</style>

