---
import Layout from '../layouts/Layout.astro';
// import ImgOpt from '../components/ImgOpt.astro';
import Bg from '../components/Bg.astro';
import { Image } from 'astro:assets';
import icon from '../imgs/photo.png';
---

<Layout title="石田 一樹 / Ishida Kazuki">
	<main>
		<h1> 改装準備中……</h1>
		<!-- <ImgOpt /> -->
		<a href="https://twitter.com/kazukiatjp" class="x-link">Ishida Kazuki@X</a>
		<Bg />
		<!-- <Image src={icon} 
		width="124"
		height="124"
		alt="石田一樹 / Ishida Kazuki" format="jpeg"
		/> -->
	</main>
</Layout>

<style>
	main {
		margin: auto;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		letter-spacing: .025em;
		width: 100%;
	}
	.x-link {
		text-align: center;
		position: absolute;
		left: 50%;
		top: calc( 50% + 3rem);
		transform: translate(-50%, -50%);
		letter-spacing: .025em;
		z-index: 999;
	}
</style>